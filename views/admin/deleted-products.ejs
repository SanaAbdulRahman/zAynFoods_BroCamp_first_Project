    <script>
        const confirmLinks = document.querySelectorAll('.confirmRestore');
    
        confirmLinks.forEach(link => {
            link.addEventListener('click', event => {
                const formId = link.getAttribute('data-formid');
                const result = confirm('Are you sure you want to restore this product?');
                if (result) {
                    document.getElementById(formId).submit();
                }
            });
        });
    </script>