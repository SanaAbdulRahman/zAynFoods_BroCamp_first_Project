<section style="background-image: url(/assetsimages/menu-bg.png);">
    <div class="our-menu section bg-light repeat-img" id="menu">
     <div class="sec-wp">
         <div class="container">
             <div class="row">
                 <div class="col-lg-12">
                     <div class="sec-title text-center mb-5">
                         <p class="sec-sub-title mb-3">our dishes</p>
                         <h2 class="h2-title">wake up early, <span>eat fresh & healthy</span></h2>
                         <div class="sec-title-shape mb-4">
                             <img src="/assetsimages/title-shape.svg" alt="">
                         </div>
                     </div>
                 </div>
             </div>
             <div class="menu-tab-wp">
                 <div class="row">
                     <div class="col-lg-12 m-auto">
                         <div class="menu-tab text-center">
                             <ul class="filters">
                                 <div class="filter-active"></div>
                                                                
                                 <li class="filter" data-filter=".all, .Main-Course, .Salads, .Desserts">
                                     <img src="/assetsimages/menu-1.png" alt="">
                                     All
                                 </li>
                             <%categories.forEach((cat,indx) => {%>
                                 <li class="filter" data-filter=".<%=cat.name%>">
                                                                   
                                     <img src="/assetsimages/cat-<%=cat.name%>.png" alt="">
                                     <%=cat.name%>
                                 </li>
                            <% });%>
                                 
                                 <!-- <li class="filter" data-filter=".Main-Course">
                                                                   
                                     <img src="/assetsimages/menu-3.png" alt="">
                                     Main Course
                                 </li>
                                 <li class="filter" data-filter=".Salads">
                                     <img src="/assetsimages/menu-2.png" alt="">
                                     Salads
                                 </li>
                                 <li class="filter" data-filter=".Desserts">
                                    
 
                                     <img src="/assetsimages/menu-4.png" alt="">
                                     Desserts
                                 </li> -->
                             </ul>
                         </div>
                     </div>
                 </div>
             </div>
 
  <div class="menu-list-row">
                 <div class="row g-xxl-5 bydefault_show" id="menu-dish">
                     <% products.forEach(product => { %>
                                              
                     <div class="col-lg-4 col-sm-6 dish-box-wp <%=product.category.name%>" data-cat="<%=product.category.name%>">
                         <div class="dish-box text-center">
                             <div class="dist-img">
                                 <img style="height: 260px; width:260px ;" src="/assetsimages/dish/<%= product.image %>" alt="">
                              
                             </div>
                             <div class="dish-rating">
                                 <%= product.rating %>
                                 <i class="uil uil-star"></i>
                             </div>
                             <div class="dish-title">
                                 <h3 class="h3-title"><%= product.name %></h3>
                                
                             </div>
                             <div class="dish-info">
                                 <ul>
                                     <li>
                                         <p>Type</p>
                                         <b><%= product.typeOfDish %></b>
                                     </li>
                                     <li>
                                         <p>Persons</p>
                                         <b><%= product.quantity %></b>
                                     </li>
                                 </ul>
                             </div>
                             <div class="dist-bottom-row">
                                 <ul>
                                     <li>
                                         <b>Rs. <%= parseFloat(product.price).toFixed(2)%></b>
                                     </li>
                                     <li>
                                         <button class="dish-add-btn" onclick="onAddToCart('<%=JSON.stringify(product)%>')">
                                            <i class="uil uil-plus"></i>
                                           
                                         </button>
                                         
                                     </li>
                                 </ul>
                             </div>
                         </div>
                     </div>
                     <% }) %>